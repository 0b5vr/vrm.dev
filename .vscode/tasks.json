{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "hugo",
            "type": "shell",
            "command": "hugo server -w --disableFastRender -D -F",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "sphinx-autobuild",
            "type": "shell",
            "command": "sphinx-autobuild content/ja/docs build -b=dirhtml --open-browser",
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "sphinx-pot",
            "type": "shell",
            "command": "sphinx-build -M gettext . _pot",
            "options": {
                "cwd": "${workspaceFolder}/content/ja/docs"
            },
            "problemMatcher": []
        },
        {
            "label": "sphinx-po",
            "type": "shell",
            "command": "sphinx-intl update -p _pot/gettext -l en",
            "options": {
                "cwd": "${workspaceFolder}/content/ja/docs"
            },
            "problemMatcher": []
        },
        {
            "label": "sphinx-build",
            "type": "shell",
            "command": "sphinx-build content/ja/docs build -b=dirhtml -E",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "showReuseMessage": false,
                "clear": true,
            },
            "problemMatcher": [
                {
                    "owner": "sphinx",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(\\w:[^:]+):(\\d+):\\s*(\\w+):\\s*(.+)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4,
                        }
                    ]
                }
            ]
        }
    ]
}